# app.py
from flask import Flask, request, jsonify
import os

app = Flask(__name__)

# خزن المفتاح في متغير بيئة على Render (اسم المتغير: SECRET_KEY)
SECRET_KEY = os.environ.get("SECRET_KEY", "CHANGE_ME_NOW")

@app.route("/x9df7nq/custom", methods=["GET"])
def private_endpoint():
    auth = request.headers.get("Authorization")
    if auth != f"Bearer {SECRET_KEY}":
        return jsonify({"error": "🚫 Unauthorized"}), 401

    return jsonify({
        "message": "✅ مرحباً، هذا Endpoint خاص وسري بك فقط",
        "status": "success"
    })

if __name__ == "__main__":
    port = int(os.environ.get("PORT", 5000))
    app.run(host="0.0.0.0", port=port)
